<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".StatisticFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="casual"
        android:gravity="center"
        android:text="Main statistic in my year"
        android:textSize="25dp"
        android:textStyle="bold" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="250dp"

        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/statisticanim" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_inc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="0dp"
            android:text="+1" />

        <Button
            android:id="@+id/btn_dec"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/btn_inc"
            android:text="-1" />

        <TextView
            android:id="@+id/tv_stat"
            android:layout_below="@id/btn_inc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Количество сделанных проектов = "
            android:textSize="20dp"/>


    </RelativeLayout>



</LinearLayout>